<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_production_lot_form_eq" model="ir.ui.view">
        <field name="name">stock.production.lot.form.eq</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="product_tracking" invisible="1"/>
            </field>
            <button name="%(stock.lot_open_quants)d" position="before">
                <button name="action_open_eq" icon="fa-legal" class="oe_stat_button" string="Equipment" type="object"
                        attrs="{'invisible': [('product_tracking', '!=', 'serial')]}"
                        groups="maintenance.group_equipment_manager"/>
            </button>
        </field>
    </record>
</odoo>